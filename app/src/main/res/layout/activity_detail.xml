<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.android.popularmovies.activities.DetailActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/root_view"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:id="@+id/detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:elevation="10dp"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="20dp"
            android:text="@string/movie_title"
            android:textSize="50sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/detail_image"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginLeft="15dp"
                android:elevation="5dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">




                <TextView
                    android:id="@+id/detail_release_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/default_release_date"
                    android:textSize="30sp"/>

                <TextView
                    android:id="@+id/detail_user_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:text="@string/default_user_rating"
                    android:textSize="25sp"/>

                <com.like.LikeButton
                    app:icon_type="heart"
                    app:icon_size="30dp"
                    android:id="@+id/star_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!--<include layout="@layout/favourite_buttons" />-->



            </LinearLayout>
        </LinearLayout>



        <TextView
            android:id="@+id/detail_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="@string/default_description"
            android:textSize="20sp"/>





        <TextView
            android:id="@+id/detail_movie_trailer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:text="Movie Trailers"
            android:textSize="25sp"/>



        <android.support.v7.widget.RecyclerView
            android:id="@+id/trailer_recycler_view"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/trailer_list_content">
        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/trailer_error_message_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"
            android:visibility="invisible" />



        <TextView
            android:id="@+id/detail_movie_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:text="Movie Reviews"
            android:textSize="25sp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/review_list"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/review_list_content" />

        <TextView
            android:id="@+id/review_error_message_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:visibility="invisible" />



    

    </LinearLayout>
</ScrollView>

